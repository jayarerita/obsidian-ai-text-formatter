{
	"name": "obsidian-ai-text-formatter",
	"version": "0.1.0",
	"description": "Transform selected text using AI services (OpenAI GPT, Google Gemini, Anthropic Claude) into structured notes, flowing prose, or actionable to-do lists. Perfect for cleaning up voice-to-text transcriptions.",
	"main": "main.js",
	"scripts": {
		"dev": "node esbuild.config.mjs",
		"build": "tsc -noEmit -skipLibCheck && node esbuild.config.mjs production",
		"version": "node version-bump.mjs && git add manifest.json versions.json"
	},
	"keywords": [
		"obsidian",
		"plugin",
		"ai",
		"text-formatting",
		"voice-to-text",
		"openai",
		"gemini",
		"claude",
		"gpt",
		"notes",
		"productivity"
	],
	"author": "AI Text Formatter Team",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/your-username/obsidian-ai-text-formatter.git"
	},
	"bugs": {
		"url": "https://github.com/your-username/obsidian-ai-text-formatter/issues"
	},
	"homepage": "https://github.com/your-username/obsidian-ai-text-formatter#readme",
	"dependencies": {
		"@google/generative-ai": "^0.21.0"
	},
	"devDependencies": {
		"@types/node": "^16.11.6",
		"@typescript-eslint/eslint-plugin": "5.29.0",
		"@typescript-eslint/parser": "5.29.0",
		"builtin-modules": "3.3.0",
		"esbuild": "^0.25.5",
		"obsidian": "latest",
		"tslib": "2.4.0",
		"typescript": "4.7.4"
	}
}
